/**
 * Sort all institutions into 3 columns
 *
 * @param $institutions
 * @param $colOneCount
 * @param $colTwoCount
 * @return array
 */
function getInstitutionCols($institutions, $colOneCount, $colTwoCount) {
    $institutionsCols = array(array(), array(), array());
    foreach ($institutions as $institution) {
        if (count($institutionsCols[0]) < $colOneCount) {
            $institutionsCols[0][] = $institution;
        } else if (count($institutionsCols[1]) < $colTwoCount) {
            $institutionsCols[1][] = $institution;
        } else {
            $institutionsCols[2][] = $institution;
        }
    }

    return $institutionsCols;
}

