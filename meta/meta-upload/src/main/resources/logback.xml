<?xml version="1.0" encoding="UTF-8"?>
<!-- configuration file for LogBack (slf4J implementation)
See here for more details: http://gordondickens.com/wordpress/2013/03/27/sawing-through-the-java-loggers/ -->
<configuration scan="true" scanPeriod="30 seconds">

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <!-- To enable JMX Management -->
    <jmxConfigurator/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Uncomment and add your logger here:
     <logger institutionName="org.springframework.samples.process.process" level="debug"/> -->
    <!--logger institutionName="org.springframework.web.servlet" level="debug"/-->
    <logger name="de.idadachverband" level="debug"/>
    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
